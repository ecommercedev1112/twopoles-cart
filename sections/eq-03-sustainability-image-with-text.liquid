{
    "name":"EQ Image With Text",
    "settings":[
       
    ],
    "presets":[
       {
          "name":"EQ Sustainability Image With Text"
       }
    ],
    "blocks":[
       {
          "type":"image-with-text",
          "name":"Image With Text",
          "settings":[
             {
                "type":"image_picker",
                "id":"image",
                "label":"Image"
             },
             {
                "type":"textarea",
                "id":"heading",
                "label":"Heading"
             },
             {
                "type":"richtext",
                "id":"text",
                "label":"Text"
             }
          ]
       },
       {
        "type":"video-with-text",
        "name":"Video With Text",
        "settings":[
           {
              "type":"url",
              "id":"video_url",
              "label":"Video URL"
           },
           {
              "type":"textarea",
              "id":"heading",
              "label":"Heading"
           },
           {
              "type":"richtext",
              "id":"text",
              "label":"Text"
           }
        ]
     }
    ]
 }

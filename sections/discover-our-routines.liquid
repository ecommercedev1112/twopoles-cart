<section class="discover-our-routines">
  <div class="Container">
    <div class="section-title">
      <h3>{{ section.settings.heading }}</h3>
    </div>
    <div class="section-content discover-our-routines-slider">
      {% for block in section.blocks limit: section.blocks.size %}
        <div class="slide">
          <a href="{{block.settings.collection_link}}" class="box">
            {% if block.settings.collection_img != blank %}
              <figure>
                <img
                  src="{{ block.settings.collection_img | img_url: 'master' }}"
                  alt=""
                  loading="lazy">
              </figure>
            {% endif %}
            <h4>{{ block.settings.collection_title }}</h4>
          </a>
        </div>
      {% endfor %}
    </div> 
  </div>
</section> 

{% schema %}
  {
    "name": "Discover Our Routines",
    "settings": [
      {
        "type": "textarea",
        "id": "heading",
        "label": "Heading",
        "default": "Descubre nuestras rutinas"
      }
    ],
    "blocks": [

      {
        "type": "category",
        "name": "Home Category",
        "settings": [
          {
            "type": "url",
            "id": "collection_link",
            "label": "Collection Link",
            "info": "choose here perticuler collection"
          }, {
            "type": "image_picker",
            "id": "collection_img",
            "label": "Category Image"
          }, {
            "label": "Collection Title",
            "id": "collection_title",
            "type": "textarea"
          }

        ]
      }
    ],
    "presets": [
      {
        "category": "index",
        "name": "Discover Our Routines"
      }
    ]
  }
{% endschema %}